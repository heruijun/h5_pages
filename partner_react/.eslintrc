{
  "parser": "babel-eslint",
  "extends": "eslint:recommended",
  "ecmaFeatures": {
    "jsx": true,
    "modules": true
  },
  "rules": {
    "no-console": 1,
    "no-unused-vars": [1, {"vars": "all", "args": "after-used"}],
    "curly": 2,
    "eqeqeq": [2, "smart"],
    "react/jsx-no-undef": 1,
    "react/jsx-pascal-case": 1,
    "react/jsx-uses-vars": 1,
    "react/jsx-uses-react": 1,
    "react/prefer-es6-class": 1
  },
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true
  },
  "globals": {
    "process": true,
    "DEV_IP": true
  },
  "plugins": [
    "react"
  ]
}
